{
  "name": "@moviehouse/server",
  "version": "0.1.0",
  "main": "server.ts",
  "scripts": {
    "build": "tsc --outDir build -p . --esModuleInterop --experimentalDecorators --resolveJsonModule --lib es6 --module commonjs",
    "dev": "ts-node-dev -r dotenv/config --transpile-only --ignore-watch node_modules src/server.ts",
    "start": "cross-env NODE_ENV=production ts-node -r dotenv/config build/src/server.js",
    "typeorm": "typeorm-ts-node-esm",
    "test": "vitest",
    "migration:run": "dotenv -- typeorm-ts-node-esm migration:run -d src/database/postgres.ts",
    "migration:revert": "dotenv -- typeorm-ts-node-esm migration:revert -d src/database/postgres.ts"
  },
  "dependencies": {
    "@apollo/datasource-rest": "^5.0.1",
    "@apollo/server": "^4.3.1",
    "body-parser": "^1.20.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "mongodb": "^3.7.3",
    "next-auth": "^4.18.8",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^2.0.0-beta.1",
    "typeorm": "^0.3.11",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.13",
    "@types/mongodb": "^3.6.20",
    "@types/node": "^18.0.0",
    "@types/uuid": "^8.3.4",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "vitest": "^0.23.2"
  }
}
